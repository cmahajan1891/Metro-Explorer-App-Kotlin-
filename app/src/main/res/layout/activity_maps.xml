<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gwu.metroexplorer.views.MenuActivity">


<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    tools:context="edu.gwu.metroexplorer.views.MapsActivity" />

    <Button
        android:id="@+id/closestStationMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Use Closest Station" />

    <Button
        android:id="@+id/selectStationMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Select a Station"
        android:layout_toLeftOf="@id/closestStationMaps"/>

    <Button
        android:id="@+id/favoriteLandMarkMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Landmark"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/closestStationMaps"/>

</RelativeLayout>